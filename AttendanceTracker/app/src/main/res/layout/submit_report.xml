<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_box_shape"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="SUBMIT REPORT"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_bold"
            android:text="FILE REPORT"
            android:textSize="24sp"
            android:textColor="@color/blue"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"/>
        
        <EditText
            android:layout_width="340dp"
            android:layout_height="35dp"
            android:hint="Title"
            android:background="@drawable/rounded_box_shape1"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:layout_width="340dp"
            android:layout_height="289dp"
            android:hint="Details"
            android:background="@drawable/rounded_box_shape1"
            android:layout_gravity="center"
            android:paddingStart="10dp"
            android:textSize="14sp"
            android:inputType="textMultiLine"
            android:lines="20"
            android:paddingTop="10dp"
            android:gravity="top|left"
            android:minLines="6"
            android:scrollHorizontally="false"
            android:scrollbars="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supporting Document"
                android:fontFamily="@font/barlow_medium"
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:layout_marginEnd="100dp"/>

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:backgroundTint="#9F9A9A"
                android:fontFamily="@font/barlow_medium"
                android:text="Upload File"
                android:textSize="10sp" />
        </LinearLayout>

        <Button
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:background="@drawable/rounded_box_shape1"
            app:backgroundTint = "@color/green"
            android:textSize="18sp"
            android:fontFamily="@font/barlow_bold"
            android:text="SUBMIT"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

    </LinearLayout>



</LinearLayout>