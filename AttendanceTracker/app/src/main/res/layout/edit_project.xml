<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_box_shape"
        app:backgroundTint="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-80dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/barlow_bold"
            android:text="EDIT PROJECT"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- DEPARTMENT INPUT TEXT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/textbox_shape"
            android:id="@+id/txt_password"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:hint="PROJ-IT-29"
            android:textSize="14sp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- TASK NAME INPUT TEXT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/t_name"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/textbox_shape"
            android:fontFamily="@font/barlow_medium"
            android:hint="Group Meeting"
            android:paddingStart="15dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Assigned"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/date_ass"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/textbox_shape"
            android:drawableEnd="@drawable/ic_calendar"
            android:drawableTint="@color/gray"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/barlow_medium"
            android:hint="mm/dd/yy"
            android:inputType="date"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Format"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/textbox_shape">

            <Spinner
                android:id="@+id/fileformats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Google Drive Link"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:id="@+id/gd_link"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:background="@drawable/textbox_shape"
            android:fontFamily="@font/barlow_medium"
            android:hint="drive.google.com/drive/u/1/folder"
            android:paddingStart="15dp"
            android:textSize="14sp" />
    </LinearLayout>


    <Button
        android:id="@+id/p_save"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_box_shape1"
        android:fontFamily="@font/barlow_bold"
        android:gravity="center"
        android:text="SAVE"
        android:textSize="18sp"
        app:backgroundTint="@color/green" />

    <Button
        android:id="@+id/btn_can"
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_box_shape1"
        android:fontFamily="@font/barlow_bold"
        android:gravity="center"
        android:text="CANCEL"
        android:textSize="18sp"
        app:backgroundTint="@color/pink" />
    

</LinearLayout>