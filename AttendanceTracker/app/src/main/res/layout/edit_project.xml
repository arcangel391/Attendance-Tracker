<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_box_shape"
        app:backgroundTint="@color/blue"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-80dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/barlow_bold"
            android:text="EDIT PROJECT"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <!-- DEPARTMENT INPUT TEXT-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/textbox_shape"
            android:id="@+id/txt_password"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:hint="PROJ-IT-29"
            android:textSize="14sp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <!-- TASK NAME INPUT TEXT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Name"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/textbox_shape"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:hint="Group Meeting"
            android:textSize="14sp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Assigned"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/textbox_shape"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:hint="mm/dd/yy"
            android:inputType="date"
            android:textSize="14sp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="File Format"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="30dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Department"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textColor="@color/pink"
                android:textSize="14sp"
                android:fontFamily="@font/barlow_regular"/>
        </LinearLayout>

        <EditText
            android:background="@drawable/textbox_shape"
            android:layout_width="350dp"
            android:layout_height="47dp"
            android:hint="PROJ-IT-29"
            android:textSize="14sp"
            android:fontFamily="@font/barlow_medium"
            android:paddingStart="15dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>