<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/curve"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/curve_shape" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="-280dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_undraw_online_ad_re_ol62" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/barlow_medium"
        android:layout_gravity="center"
        android:text="SIGN-UP"
        android:textColor="#000000"
        android:textSize="43sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <!-- STREET INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Street/Bldg."
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_streetbldg"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_shape"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. Sampaguita"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- BARANGAY INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Barangay"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_brgy"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_shape"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. Barangay Olympia"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- CITY INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_city"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="e.g. Taguig City"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- BIRTHDAY INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Birthdate"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_birthdate"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawableTint="@color/gray"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="mm/dd/yyyy"
                    android:paddingStart="15dp"
                    android:paddingEnd="10dp"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- GENDER INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="47dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape">

                    <Spinner
                        android:id="@+id/sp_gender"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:contentDescription="@string/gender_value"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>

            <!-- CIVIL STATUS INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Civil Status"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="47dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape">

                    <Spinner
                        android:id="@+id/sp_civilstat"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:contentDescription="@string/civilstat_value"
                        android:spinnerMode="dropdown" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />

            <ImageView
                android:id="@+id/page1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/sky" />

            <ImageView
                android:id="@+id/page2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />

            <ImageView
                android:id="@+id/page3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_previous1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="130dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Previous"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_next1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="130dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Next"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>







</LinearLayout>