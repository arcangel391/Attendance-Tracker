<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_box_shape"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-80dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/barlow_bold"
            android:text="PROJECT STATUS"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:layout_marginTop="6dp"/>
    </LinearLayout>

    <EditText
        android:id="@+id/p_search"
        android:layout_width="340dp"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/textbox_shape1"
        android:drawableEnd="@drawable/ic_magnifying_glass_solid"
        android:drawableTint="@color/gray"
        android:hint="Search"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="@drawable/textbox_shape1"
            android:backgroundTint = "@color/green">

            <TextView
                android:id="@+id/p_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/fa_solid"
                android:gravity="center"
                android:text="\uf021"
                android:textColor="@color/white"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="@drawable/textbox_shape1"
            android:backgroundTint = "@color/sky"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/p_filter"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/fa_solid"
                android:gravity="center"
                android:text="\uf0b0"
                android:textColor="@color/white"
                android:textSize="24dp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:stateListAnimator="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/status_view"
            android:stateListAnimator="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="30dp" />


    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit_proj"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:backgroundTint="@color/pink"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/white"
        app:tint="@color/white" />


</LinearLayout>