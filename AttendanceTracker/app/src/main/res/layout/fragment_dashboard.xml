<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/rounded_box_shape"
        android:fontFamily="@font/barlow_black"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-80dp"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/txtDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_semibold"
            android:text="Dashboard"
            android:textColor="@color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/txtSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UIP Attendance Tracker"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Announcements"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/barlow_semibold"
            android:textSize="24sp"
            android:textColor="@color/gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:scrollbars="vertical" />

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_bold"
            android:text="txtDay"
            android:textColor="@color/gray"
            android:textSize="24sp" />

        <!--Date-->
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/barlow_regular"
            android:text="Date"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <!--Time-->
        <DigitalClock
            android:id="@+id/digitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:fontFamily="@font/barlow_regular"
            android:textSize="36sp" />

        <!--Btn Time In/ Timeout-->
        <Button
            android:id="@+id/btnAttendance"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:width="320dp"
            android:background="@drawable/rounded_box_shape1"
            android:fontFamily="@font/barlow_semibold"
            android:onClick="clickTimeBtn"
            android:text="Time-in"
            android:textSize="18sp"
            app:backgroundTint="@color/green" />


        <Button
            android:layout_marginTop="10dp"
            android:id="@+id/btnAtt_log"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:width="320dp"
            android:background="@drawable/rounded_box_shape1"
            android:fontFamily="@font/barlow_semibold"
            android:text="Attendance Log"
            android:drawableLeft="@drawable/att_log"
            android:textSize="18sp"
            app:backgroundTint="@color/pink"/>





    </LinearLayout>

</LinearLayout>