<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_box_shape1"
            app:backgroundTint = "@color/blue"
            android:layout_marginTop="-20dp"
            />


        <!-- USER IMAGE AND INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-230dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher_round"
                />
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UIP Attendance Tracker"
                    android:fontFamily="@font/barlow_medium"
                    android:textSize="14sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Martin Sampaga"
                    android:fontFamily="@font/barlow_bold"
                    android:textSize="24sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UIP Attendance Tracker"
                    android:fontFamily="@font/barlow_regular"
                    android:textSize="18sp"
                    android:textColor="@color/white"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <!-- RENDERED HOURS INFO -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            >

            <!-- REQUIRED HOURS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="36sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REQUIRED\nHOURS"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf017"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <!-- RENDERED HOURS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp">>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="36sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RENDERED\nHOURS"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf4fd"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>

            <!-- REMAINING HOURS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginHorizontal="30dp">>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="36sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REMAINING\nHOURS"
                    android:textColor="@color/white"
                    android:fontFamily="@font/barlow_semibold"
                    android:textAlignment="center"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf252"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!--- USER PROFILE CONTENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-95dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box_shape1"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf0e0"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="johnmartin@gmail.com"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="09123456789"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


        <!-- LOCATION -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box_shape1"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf3c5"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="35sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Building No./Street"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123 Sampaguita Street"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barangay/City/Region"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olympia, Makati City, Metro Manila"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- ADDITIONAL INFO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_box_shape1"
            android:elevation="10dp"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pink"
                    android:fontFamily="@font/fa_solid"
                    android:text="\uf05a"
                    android:textAlignment="center"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:textSize="30sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthday"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="March 8, 1999"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/barlow_bold"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/barlow_bold"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- FLOATING ACTION BUTTON -->

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/fabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="310dp"
        android:layout_marginTop="-220dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/plus"
        app:backgroundTint="@color/pink"
        app:tint="@color/white">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-220dp"
            app:fab_colorNormal="@color/green"
            app:fab_size="mini"
            android:src="@drawable/sign_out_alt_solid"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabCP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-220dp"
            app:fab_colorNormal="@color/green"
            app:fab_size="mini"
            android:src="@drawable/user_lock_solid"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="-220dp"
            app:fab_colorNormal="@color/green"
            app:fab_size="mini"
            android:src="@drawable/pencil_alt_solid"/>

    </com.github.clans.fab.FloatingActionMenu>

</LinearLayout>
