<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/curve"
        android:layout_width="match_parent"
        android:layout_height="351dp"
        android:layout_marginTop="-100dp"
        android:background="@drawable/curve_shape" />



    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_marginTop="-280dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_undraw_online_ad_re_ol62" />

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginTop="-100dp"
        android:fontFamily="@font/barlow_medium"
        android:layout_gravity="center"
        android:text="SIGN-UP"
        android:textColor="#000000"
        android:textSize="43sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <!-- LAST NAME INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_lastname"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_shape"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. Dela Cruz"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- FIRST NAME INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_firstname"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_shape"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. Juan"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- MIDDLE NAME INPUT TEXT-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Middle Name"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/pink"
                    android:textSize="14sp"
                    android:fontFamily="@font/barlow_regular"/>
            </LinearLayout>

            <EditText
                android:id="@+id/et_middlename"
                android:layout_width="350dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/textbox_shape"
                android:fontFamily="@font/barlow_medium"
                android:hint="e.g. Batumbakal"
                android:paddingStart="15dp"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <!-- CONTACT INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Contact Number"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_contact"
                    android:layout_width="160dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="09123456789"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- EMAIL INPUT TEXT-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:textColor="@color/pink"
                        android:textSize="14sp"
                        android:fontFamily="@font/barlow_regular"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/textbox_shape"
                    android:fontFamily="@font/barlow_medium"
                    android:hint="email@gmail.com"
                    android:inputType="textEmailAddress"
                    android:paddingStart="15dp"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/iv_page"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/sky" />

            <ImageView
                android:id="@+id/iv_page1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />

            <ImageView
                android:id="@+id/iv_page2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />

            <ImageView
                android:id="@+id/iv_page3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_box_shape"
                app:backgroundTint="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_next"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:clickable="true"
                android:fontFamily="@font/barlow_semibold"
                android:gravity="end"
                android:paddingEnd="30dp"
                android:text="Next"
                android:textColor="@color/gray"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>







</LinearLayout>