<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/fab_margin"
        android:layout_marginBottom="16dp"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/Theme.AttendanceTracker.PopupOverlay" />

    <TextView
        android:id="@+id/txtDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20sp"
        android:layout_marginTop="35sp"
        android:text="Dashboard"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#ffff"
        android:textSize="34sp" />
    <TextView
        android:id="@+id/txtAnnouncement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120sp"
        android:layout_marginStart="20sp"
        android:layout_below="@+id/txtDashboard"
        android:text="Announcements"
        android:textColor="#000"
        android:textSize="26sp" />
    <LinearLayout
        android:id="@+id/LLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50sp"
        android:orientation="vertical">
        <!-- A CardView that contains a TextView -->

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="110sp"
            android:background="#8AC645"
            app:cardCornerRadius="12dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="380dp"
            android:layout_height="80dp"
            android:layout_marginStart="15sp"
            android:layout_marginTop="10sp"
            android:background="@color/blue"
            app:cardCornerRadius="12dp">

            <TextView
                android:id="@+id/info_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#03A9F4" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/LLayout"
        app:layout_anchor="@+id/LLayout"
        app:layout_anchorGravity="center">

        <TextView
            android:id="@+id/txtDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Wednesday"
            android:textColor="#000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDay"
            android:layout_centerInParent="true"
            android:text="March 3, 2022"
            android:textColor="#000"
            android:textSize="24sp" />

        <DigitalClock
            android:id="@+id/digitalClock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDate"
            android:layout_centerInParent="true"
            android:textSize="28sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/digitalClock"
            android:layout_centerHorizontal="true"
            android:background="@color/green"
            android:text="Time-in" />

    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
