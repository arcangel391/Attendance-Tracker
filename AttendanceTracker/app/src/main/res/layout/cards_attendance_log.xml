<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:id="@+id/attendanceCardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtAttendanceDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/barlow_semibold"
                android:text="Date"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtAttendanceDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="Day" />

            <TextView
                android:id="@+id/txtHoursRendered"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/barlow_regular"
                android:text="Hours Rendered" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/txtAttendanceTimeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:text="Time-In"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAttendanceTimeOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:paddingStart="10dp"
                android:text="Time-Out"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txtAttendanceHoursLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/barlow_regular"
                android:paddingStart="10dp"
                android:text="OJT Hours Left"
                android:textSize="14sp" />



        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>