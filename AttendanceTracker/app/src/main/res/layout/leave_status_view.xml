<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="-30dp"
        android:background="@drawable/rounded_box_shape"
        app:backgroundTint="@color/blue"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="-80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fa_solid"
            android:text="\uf060"
            android:textSize="25sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="40dp">

            <TextView
                android:id="@+id/textTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/barlow_bold"
                android:text="LEAVE STATUS"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starting Date"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave Status"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20002999"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Martin Sampaga"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROJ-IT-29"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emergency"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 8, 2022"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="March 12, 2022"
                android:fontFamily="@font/barlow_regular"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pending"
                android:fontFamily="@font/barlow_bold"
                android:textSize="16sp"
                android:textColor="@color/sky"
                android:layout_marginBottom="10dp"/>


        </LinearLayout>


    </LinearLayout>

    <Button
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_box_shape1"
        app:backgroundTint = "@color/green"
        android:textSize="18sp"
        android:fontFamily="@font/barlow_bold"
        android:text="WITHDRAW LEAVE"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"/>

    <Button
        android:layout_width="310dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_box_shape1"
        android:backgroundTint="@color/pink"
        app:backgroundTint = "@color/pink"
        android:textSize="18sp"
        android:fontFamily="@font/barlow_bold"
        android:text="EDIT"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

</LinearLayout>